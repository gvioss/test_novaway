{% extends 'base.html.twig' %}

{% block content %}

    <h2>Liste des livres</h2>

    <div class="row">
        <div class="col-sm">
            <a href="/book/add" class="btn btn-success">Ajouter un livre</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>ISNB</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Date de parution</th>
                    <th>Nombre de page</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <th>{{ book.isnb }}</th>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author.name }}</td>
                        <td>{{ book.releasedate|date('j F Y') }}</td>
                        <td>{{ book.pagenumber }}</td>
                        <td>{{ book.price }}</td>
                        <td>
                            <a href="/book/detail/{{ book.id }}" class="btn btn-info">DÃ©tail</a>
                            <a href="/book/edit/{{ book.id }}" class="btn btn-secondary">Modifier</a>
                            <a href="/book/delete/{{ book.id }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

